<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"
    android:id="@+id/container1"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout50dp"
            android:gravity="right"
            >
            <Button
                android:id="@+id/TH"
                android:layout_width="@dimen/layout50dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:enabled="false"
                android:text="TH" />
            <Button
                android:id="@+id/EN"
                android:layout_width="@dimen/layout50dp"
                android:layout_height="wrap_content"
                android:onClick="process"
                android:text="EN" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:padding="@dimen/layout20dp"
                    android:onClick="imageClick"
                    android:src="@mipmap/profile"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:src="@mipmap/center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/TH"
                        android:textStyle="bold"
                        android:textColor="@color/colorCode"
                        android:layout_marginTop="@dimen/layout60dp"
                        android:text="@string/name_th"
                        android:textSize="@dimen/font25sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/layout10dp"
                            android:layout_marginTop="@dimen/layout20dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorCode"
                            android:text="@string/id_th"
                            android:textSize="@dimen/font15sp" />
                        <TextView
                            android:id="@+id/code1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/code"
                            android:textStyle="bold"
                            android:textColor="@color/colorCode"
                            android:layout_marginTop="@dimen/layout20dp"
                            android:text="@string/id"
                            android:textSize="@dimen/font15sp" />
                        <TextView
                            android:id="@+id/tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/code"
                            android:textStyle="bold"
                            android:textColor="@color/colorCode"
                            android:layout_marginRight="@dimen/layout10dp"
                            android:layout_marginTop="@dimen/layout20dp"
                            android:text="@string/tel_th"
                            android:textSize="@dimen/font15sp" />

                        <TextView
                            android:id="@+id/tel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/code"
                            android:textStyle="bold"
                            android:textColor="@color/colorCode"
                            android:layout_toRightOf="@+id/tel"
                            android:layout_marginTop="@dimen/layout20dp"

                            android:text="@string/tel"
                            android:textSize="@dimen/font15sp" />
                        <TextView
                            android:id="@+id/add1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tel"
                            android:textStyle="bold"
                            android:textColor="@color/colorCode"
                            android:layout_marginTop="@dimen/layout20dp"
                            android:text="@string/addr_th"
                            android:textSize="@dimen/font15sp" />
                    </RelativeLayout>



                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>