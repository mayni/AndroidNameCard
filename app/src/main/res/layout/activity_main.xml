<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="72dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/TH"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/EN"
                android:text="TH" />

            <Button
                android:id="@+id/EN"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="EN" />


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:background="@color/colorName"
                android:layout_marginTop="20dp"
                android:text="นายนิวัฒน์ งามไส้"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="เลขบัตรประจำตัวประชาชน :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/code"
                android:background="@color/colorCode"
                android:text="1-2345-678910-88-8"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/code"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="เบอร์โทรศัพท์ :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/code"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tel"
                android:background="@color/colorTel"
                android:text="+66 81 2265894"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tel"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="ที่อยู่ :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tel"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/add"
                android:background="@color/colorAdd"
                android:text="จังหวัดเชียงใหม่ ประเทศไทย 50200"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                />


        </RelativeLayout>
    </LinearLayout>


<!--555555555555-->

</android.support.constraint.ConstraintLayout>